{
  "private": true,
  "name": "eisbuk",
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.0.3",
    "prettier": "^2.4.1",
    "typescript": "~4.4.2",
    "eslint": "^7.31.0",
    "eslint-config-google": "^0.14.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unused-imports": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0"
  },
  "scripts": {
    "emulators:inspect": "bash -c '(trap \"kill 0\" SIGINT; pnpm -C packages/functions watch & firebase emulators:start --project eisbuk --inspect-functions 9229)'",
    "emulators:start": "bash -c '(trap \"kill 0\" SIGINT; pnpm -C packages/functions build & firebase emulators:start --project eisbuk)'",
    "deploy:eisbuk": "firebase deploy --project eisbuk --only hosting:eisbuk",
    "deploy:production": "./deploy-firebase.expect",
    "deploy:preview": "firebase --project eisbuk hosting:channel:deploy",
    "prepare": "pnpm husky install && pnpm -C packages/shared build && pnpm -C packages/translations build"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix --max-warnings=0"
    ],
    "*.{js,ts,tsx,json,yml,yaml,md,mdx}": [
      "prettier --write"
    ]
  }
}
