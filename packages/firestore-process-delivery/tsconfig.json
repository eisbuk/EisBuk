{
  "extends": "../scaffold/tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",

    "lib": ["ESNext", "ESNext.AsyncIterable"],

    "outDir": "dist",
    "sourceMap": true,
    "removeComments": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "types": ["node", "jest"]
  },
  "exclude": ["node_modules", "./.eslintrc.js", "jest.config.js"],
  "include": ["./src/**/*.ts"]
}
