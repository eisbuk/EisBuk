{
  "extends": "../scaffold/tsconfig.ui.json",
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "noEmit": true,
    "declaration": false
  },
  "exclude": [
