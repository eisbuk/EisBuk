{
  "extends": "../scaffold/tsconfig.ui.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["es5", "es2015", "dom"],
    "moduleResolution": "nodenext",

    "typeRoots": ["node_modules/@types", "@types"],
    "types": ["cypress", "node"],

    "noEmit": true,
    "declaration": false,
    "sourceMap": false
  },
  "exclude": ["node_modules", ".eslintrc.js"],
  "include": ["**/*.ts", "vite.config.ts", "cypress.config.ts"]
}
